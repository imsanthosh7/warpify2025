{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/profile/:username",
      "destination": "/api/profile/[username]"
    },
    {
      "source": "/api/stats/:username",
      "destination": "/api/stats/[username]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
